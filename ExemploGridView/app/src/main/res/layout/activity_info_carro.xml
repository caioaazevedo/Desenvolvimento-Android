<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.InfoCarroActivity">

    <TextView
        android:id="@+id/textInfoModelo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="60sp"
        android:text="Modelo"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/textInfoFabricante"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="45sp"
        android:text="Fabricante"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/textInfoAno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:text="Ano"
        android:layout_gravity="center"/>

    <ImageView
        android:id="@+id/imageInfoCarro"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:src="@drawable/corolla"
        android:layout_gravity="center"
        android:padding="20dp"/>

</LinearLayout>