<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingBottom="10dp"
    android:paddingTop="10dp"
    android:background="@drawable/background"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textLabelToday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hoje"
        android:textSize="25sp"
        android:textColor="@color/colorPrimaryText"/>

    <TextView
        android:id="@+id/textToday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="18/09/2018"
        android:layout_toRightOf="@id/textLabelToday"
        android:textSize="25sp"
        android:layout_marginLeft="10dp"
        android:textColor="@color/colorPrimaryText"/>
    
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorDividor"
        android:layout_below="@id/textLabelToday"
        android:layout_marginTop="10dp" />

    <TextView
        android:id="@+id/textLabelLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/diasRestantes"
        android:layout_below="@id/textLabelToday"
        android:layout_marginTop="150dp"
        android:layout_centerHorizontal="true"
        android:textSize="20sp"
        android:textColor="@color/colorPrimaryText"/>

    <TextView
        android:id="@+id/textLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="325 dias"
        android:textSize="40sp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/textLabelLeft"
        android:padding="20dp"
        android:textColor="@color/colorPrimaryDark"/>

    <Button
        android:id="@+id/buttonConfirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/naoConfirmado"
        android:background="@drawable/round_corner_button"
        android:textColor="@color/colorTextWhite"
        android:layout_alignParentBottom="true"
        android:textSize="20sp"
        android:padding="20dp"/>

</RelativeLayout>