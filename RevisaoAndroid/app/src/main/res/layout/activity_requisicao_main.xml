<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activityRequisicao.RequisicaoMainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/requisicaoActivity"
        android:textSize="30sp"
        android:padding="15dp"
        android:gravity="center"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pesquisar Estudante:"
        android:textSize="20sp"/>

    <EditText
        android:id="@+id/editReqPesquisa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Digite a matrÃ­cula..."/>

    <Button
        android:id="@+id/buttonReqPesquisa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pesquisar"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Resultado:"
        android:textSize="20sp"
        android:layout_marginTop="25dp"/>
    <TextView
        android:id="@+id/textReqInformacoes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nenhum resultado!"
        android:textSize="15sp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"/>

</LinearLayout>